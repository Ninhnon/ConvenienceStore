<Page x:Class="ConvenienceStore.Views.Admin.ReportView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ConvenienceStore.Views.Admin"
             mc:Ignorable="d" 
      xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
             x:Name="wdReport" 
      xmlns:uc="clr-namespace:ConvenienceStore.Resources.UserControlCustom"
        d:DesignHeight="660"
        Width="1100"
       Style="{StaticResource Page_Style}">
    <!--Style="{StaticResource Page_Style}"-->
    <Border
        CornerRadius="0,0,20,0">
        <Border.Background>
            <LinearGradientBrush StartPoint="0,1" EndPoint="1,0">
                <GradientStop Color='#E9E4F0' Offset="0"/>
                <GradientStop Color='#D3CCE3' Offset="1"/>
            </LinearGradientBrush>
        </Border.Background>



        <Border Grid.Column="1" Grid.Row="2" 
                Background="#ffffff" 
        CornerRadius="15"
        Padding="20" Width="800"
                Height="500"
                Margin="20 20 20 0">
            <Grid Margin="10 5">
                <!--Title-->
                <TextBlock Text="Sales Figures"
                           Foreground="#083353" 
            FontSize="20"
            FontWeight="Bold" 
                           />

                <!--Legends-->

                <!--Chart-->
                <lvc:CartesianChart Grid.Row="1" Margin="5 40 0 60" LegendLocation="None">
                    <lvc:CartesianChart.DataTooltip>
                        <lvc:DefaultTooltip Background="Red" Foreground="#ffffff" Opacity="0.7" BulletSize="10">
                        </lvc:DefaultTooltip>
                    </lvc:CartesianChart.DataTooltip>

                    <lvc:CartesianChart.AxisX>
                        <lvc:Axis Foreground="#90A3B2" ShowLabels="True">
                            <lvc:Axis.Separator>
                                <lvc:Separator StrokeThickness="0" Step="2"/>
                            </lvc:Axis.Separator>
                        </lvc:Axis>
                    </lvc:CartesianChart.AxisX>

                    <lvc:CartesianChart.AxisY>
                        <lvc:Axis MinValue="40" MaxValue="350" Foreground="#90A3B2" ShowLabels="True">
                            <lvc:Axis.Separator>
                                <lvc:Separator StrokeThickness="0"/>
                            </lvc:Axis.Separator>
                        </lvc:Axis>
                    </lvc:CartesianChart.AxisY>

                    <lvc:CartesianChart.Series>
                        <lvc:LineSeries Values="50,120,110,160,150,180,120,170,165,180" Fill="Transparent" StrokeThickness="3" PointGeometrySize="0">
                            <lvc:LineSeries.Stroke>
                                <LinearGradientBrush>
                                    <GradientStop Color="#ffffff" Offset="0.06"/>
                                    <GradientStop Color="#2889FC" Offset="0.5"/>
                                    <GradientStop Color="#ffffff" Offset="0.93"/>
                                </LinearGradientBrush>
                            </lvc:LineSeries.Stroke>
                        </lvc:LineSeries>
                        <lvc:LineSeries Values="170,240,200,220,220,270,200,260,200,240" Fill="Transparent" StrokeThickness="3" PointGeometrySize="0">
                            <lvc:LineSeries.Stroke>
                                <LinearGradientBrush>
                                    <GradientStop Color="#ffffff" Offset="0.06"/>
                                    <GradientStop Color="#FE6C47" Offset="0.5"/>
                                    <GradientStop Color="#ffffff" Offset="0.9"/>
                                </LinearGradientBrush>
                            </lvc:LineSeries.Stroke>
                        </lvc:LineSeries>
                    </lvc:CartesianChart.Series>
                </lvc:CartesianChart>

                <!--Note Text-->
                <Grid VerticalAlignment="Bottom" Margin="10 0">
                    <TextBlock TextWrapping="Wrap" Margin="30 0 0 0" LineHeight="18" Foreground="#B7B7B7"
                                   Text="Net Sales, Found on the income statement are used to calculate this ration Return and refunds must be backed out of total sales to measure the truly measure the firms assets ability to generate sales."/>
                </Grid>

            </Grid>
        </Border>



    </Border>
</Page>

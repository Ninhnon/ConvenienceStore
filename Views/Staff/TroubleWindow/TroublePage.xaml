<Page x:Class="ConvenienceStore.Views.Staff.TroubleWindow.TroublePage"
xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ConvenienceStore.Views.Staff"
        mc:Ignorable="d"
        Title="HistoryWindow" 
        Height="620"
        Width="1140"
        x:Name="staffHistoryPage"
        xmlns:Icon="http://metro.mahapps.com/winfx/xaml/iconpacks"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        TextElement.FontWeight="Regular"
        TextElement.FontSize="13"
        TextOptions.TextFormattingMode="Ideal"
        TextOptions.TextRenderingMode="Auto"
        Background="Transparent"
        xmlns:vm="clr-namespace:ConvenienceStore.ViewModel.StaffVM.TroubleWindowVM"
        DataContext="{StaticResource TroubleVM}"
        ShowsNavigationUI="False"
        FontFamily="{DynamicResource MaterialDesignFont}"
        xmlns:i="http://schemas.microsoft.com/xaml/behaviors">
    <i:Interaction.Triggers>
        <i:EventTrigger EventName="Loaded">
            <!--<i:InvokeCommandAction Command="{Binding FirstLoadCM}" />-->
            <i:InvokeCommandAction Command="{Binding BindingTroubleSnackbar}"
                                   CommandParameter="{Binding ElementName=TroubleSnackbar}"/>
        </i:EventTrigger>
    </i:Interaction.Triggers>
    <Page.Resources>
        <vm:EditConverter x:Key="EditConverter" />
    </Page.Resources>
    <Border CornerRadius="8">
        <Border.Background>
            <LinearGradientBrush StartPoint="0,1" EndPoint="1,0">
                <GradientStop Color='#E9E4F0' Offset="0"/>
                <GradientStop Color='#D3CCE3' Offset="1"/>
            </LinearGradientBrush>
        </Border.Background>
        <Grid>

            <StackPanel Margin="30 20">
                <Grid Margin="0 0 0 20">
                    <TextBlock Text="Chi tiết Vấn đề"
                           FontSize="32"
                           FontWeight="SemiBold"
                           Margin="0 0 0 5"/>
                    <Button Style="{StaticResource addButton}"
                    Cursor="Hand"
                    Margin="0,0,0,0"
                    Command="{Binding OpenAddErrorCommand}"
                    HorizontalAlignment="Right"
                    Grid.Row="1">
                        <StackPanel Orientation="Horizontal" >
                            <Icon:PackIconMaterial Kind="Plus" 
                           VerticalAlignment="Center" Margin="0 1 8 0" Width="11" Height="11"/>
                            <TextBlock Text="Báo cáo"/>
                        </StackPanel>
                    </Button>
                </Grid>

                <Grid Margin="0 0 0 15">

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Orientation="Horizontal"
                                Grid.Column="0">

                        <TextBlock Text="Số lượng:  "
                           FontSize="24"
                           FontWeight="DemiBold"
                           VerticalAlignment="Center"/>

                        <TextBlock Text="{Binding ListError.Count}"
                           d:Text="10"
                           FontSize="24"
                           FontWeight="DemiBold"
                           VerticalAlignment="Center"/>
                    </StackPanel>

                    <ComboBox Grid.Column="3"
                              Style="{StaticResource CustomComboBox}"
                    FontSize="14"
                      Height="40"
                      Width="150"
                      SelectedIndex="0"
                      x:Name="cboxFilter"
                      VerticalContentAlignment="Bottom"
                      HorizontalAlignment="Left"
                      SelectedItem="{Binding ItemViewMode,Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                      Margin="10 0 0 0"
                      VerticalAlignment="Top"
                      materialDesign:HintAssist.Hint="Loại tìm kiếm">
                        <ComboBoxItem>
                            <TextBlock Text="Toàn bộ"
                                       FontSize="16"
                                       Foreground="Gray"/>
                        </ComboBoxItem>
                        <ComboBoxItem>
                            <TextBlock Text="Chờ tiếp nhận"
                                       FontSize="16"
                                       Foreground="Gray"/>
                        </ComboBoxItem>
                        <ComboBoxItem>
                            <TextBlock Text="Đang giải quyết"
                                       FontSize="16"
                                       Foreground="Gray"/>
                        </ComboBoxItem>
                        <ComboBoxItem>
                            <TextBlock Text="Đã giải quyết"
                                       FontSize="16"
                                       Foreground="Gray"/>
                        </ComboBoxItem>
                        <ComboBoxItem>
                            <TextBlock Text="Đã hủy"
                                       FontSize="16"
                                       Foreground="Gray"/>
                        </ComboBoxItem>
                        <i:Interaction.Triggers>
                            <i:EventTrigger EventName="SelectionChanged">
                                <i:InvokeCommandAction Command="{Binding FilterListErrorCommand}"
                                                           CommandParameter="{Binding ElementName=cboxFilter}" />
                            </i:EventTrigger>
                        </i:Interaction.Triggers>

                    </ComboBox>
                </Grid>
                <DataGrid
                    Style="{DynamicResource DataGridStyle2}"
                    RowStyle="{DynamicResource DataGridRowStyle2}" 
                    ColumnHeaderStyle="{DynamicResource DataGridColumnHeaderStyle2}"
                    CellStyle="{DynamicResource DataGridCellStyle2}" 
                    ItemsSource="{Binding ListError, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                    SelectedItem="{Binding SelectedItem}"
                    x:Name="errorDatagrid"
                    ToolTip="Nháy đúp để xem chi tiết"
                    ScrollViewer.CanContentScroll="True" 
                    ScrollViewer.VerticalScrollBarVisibility="Visible"
                    ScrollViewer.HorizontalScrollBarVisibility="Hidden"
                        Height="450"
                    >
                        <i:Interaction.Triggers>
                            <i:EventTrigger EventName="MouseDoubleClick">
                                <i:InvokeCommandAction Command="{Binding LoadDetailWindowCM}" />
                            </i:EventTrigger>
                        </i:Interaction.Triggers>
                        <DataGrid.Columns>

                            <DataGridTextColumn Header="#" IsReadOnly="True" CanUserResize="False" Width="auto" />
                            <DataGridTemplateColumn Header="Vấn đề" IsReadOnly="True" Width="220">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal">
                                            <Border Width="25" Height="25" CornerRadius="50" Margin="0 0 10 0" >
                                                <Image Stretch="Fill"
                                            Source="{Binding Image}" />
                                            </Border>
                                            <TextBlock Text="{Binding Title}" VerticalAlignment="Center"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            <DataGridTemplateColumn Header="Trạng thái" 
                                        IsReadOnly="True"
                                        CanUserResize="False"
                                        Width="150">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding Status}"
                                           ToolTip="{Binding Status}"/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            <DataGridTextColumn Header="Tên nhân viên báo cáo " Binding="{Binding StaffName}" IsReadOnly="True" Width="220"/>
                            <DataGridTextColumn Header="Ngày báo cáo" Binding="{Binding SubmittedAt,StringFormat=dd/MM/yyyy}" IsReadOnly="True" Width="180"/>
                            <DataGridTextColumn IsReadOnly="True"
                                        CanUserResize="False"
                                        Width="140" Header="Chi phí" Binding="{Binding RepairCost, Converter={StaticResource MoneyToVNDCurrency}}" />
                            <!--<DataGridTextColumn Header="Salary " Binding="{Binding Salary}" IsReadOnly="True" Width="100"/>-->
                            <DataGridTemplateColumn Header="Thao tác" IsReadOnly="True" Width="auto">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate >

                                        <StackPanel Visibility="{Binding Status,Converter={StaticResource EditConverter}}" Orientation="Horizontal">

                                            <Button 
                                                    Command="{Binding LoadEditErrorCM }"
                                            CommandParameter="{Binding ElementName=errorDatagrid}" 
                                         DataContext="{StaticResource TroubleVM}"
                                        Style="{StaticResource gridEditButton2}">
                                                <Icon:PackIconMaterial Kind="PencilOutline" Style="{StaticResource gridButtonIcon}"/>
                                            </Button>
                                        </StackPanel>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>
            </StackPanel>

            <materialDesign:Snackbar x:Name="TroubleSnackbar"
                                     IsActive="False"
                                     MessageQueue="{materialDesign:MessageQueue}"/>
        </Grid>
    </Border>

</Page>


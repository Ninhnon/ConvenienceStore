<Window x:Class="ConvenienceStore.Views.Staff.TroubleWindow.ViewError"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:vm="clr-namespace:ConvenienceStore.ViewModel.TroubleWindowVM"
        mc:Ignorable="d"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        Height="500"
        Width="850"
        MouseLeftButtonDown="window_MouseLeftButtonDown"
        WindowStartupLocation="CenterScreen"
        FontSize="20"
        DataContext="{StaticResource TroubleVM}"
        x:Name="Error_Detail_Page">
    <Border BorderThickness="1"
            BorderBrush="Black"
            CornerRadius="10"
            Background="White">
        
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="7*" />
                <RowDefinition Height="83*" />
            </Grid.RowDefinitions>

            <Border BorderThickness="0,0,0,1"
                    BorderBrush="Black"
                    Grid.Row="0">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Chi tiết sự cố"
                               FontSize="25"
                               FontWeight="Bold"
                               Margin="10,0,0,0" />
                    <Button Command="{Binding CloseCM}"
                            CommandParameter="{Binding ElementName=Error_Detail_Page}"
                            ToolBar.OverflowMode="AsNeeded"
                            Background="Transparent"
                            Foreground="Black"
                            BorderBrush="Transparent"
                            
                            materialDesign:ButtonAssist.CornerRadius="0,10,0,0"
                            Margin="636,-6,0,0">
                        <!--MouseEnter="Button_MouseEnter_1"
                            MouseLeave="Button_MouseLeave_1"-->
                        <materialDesign:PackIcon Kind="WindowClose"
                                                 Padding="0" />
                    </Button>
                </StackPanel>
            </Border>

            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="178*" />
                    <ColumnDefinition Width="237*" />
                    <ColumnDefinition Width="9*"/>
                </Grid.ColumnDefinitions>

                <Border Grid.Column="0"
                        Margin="10,10,10,10"
                        CornerRadius="8"
                        BorderThickness="1"
                        BorderBrush="Black">
                    <Border.Background>
                        <ImageBrush x:Name="Image" ImageSource="{Binding SelectedItem.Image}" />
                    </Border.Background>
                </Border>

                <Grid Grid.Column="1"
                      Margin="10,10,10,10" Grid.ColumnSpan="2">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="90*" />
                        <RowDefinition Height="10*" />
                    </Grid.RowDefinitions>
                    <StackPanel Grid.Row="0">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="{Binding SelectedItem.Title}"
                                       FontWeight="Bold"
                                       FontSize="18" />
                            <TextBlock Text="Mức độ: "
                                       Margin="120,3,0,0"
                                       FontSize="15" />
                            <TextBlock x:Name="Level"
                                Text="{Binding SelectedItem.Level}"
                                       TextWrapping="Wrap"
                                       Margin="0,3,0,0"
                                       FontSize="15" />
                        </StackPanel>
                        <Border BorderThickness="0,0,0,0.5"
                                BorderBrush="Black">
                            <TextBlock x:Name="Description" Text="{Binding SelectedItem.Description}"
                                       TextWrapping="Wrap"
                                       Margin="0,15,0,0"
                                       FontSize="15" />
                        </Border>
                        <StackPanel Orientation="Horizontal">
                            <StackPanel Margin="0,10,0,0">
                                <TextBlock Text="Ngày tiếp nhận:" />
                                <TextBlock x:Name="SubmittedAt" Text="{Binding SelectedItem.SubmittedAt,StringFormat=dd/MM/yyyy HH:mm:ss}" />
                            </StackPanel>
                            <StackPanel Margin="100,10,0,0">
                                <TextBlock Text="Nhân viên báo cáo:" />
                                <TextBlock x:Name="StaffId" Text="{Binding SelectedItem.StaffId}" />
                            </StackPanel>
                        </StackPanel>

                        <StackPanel Margin="0,10,0,0">
                            <TextBlock Text="Trạng thái:" />
                            <TextBlock x:Name="Status"
                                Width="140"
                                       Text="{Binding SelectedItem.Status}"
                                       HorizontalAlignment="Left" />


                        </StackPanel>

                        <StackPanel Margin="0,10,0,0"
                                    x:Name="_startday"
                                    IsEnabled="False">
                            <TextBlock Text="Ngày sửa:" />
                            <TextBlock x:Name="StartDate"
                                HorizontalAlignment="Left"
                                       Text="{Binding SelectedItem.StartDate,StringFormat=dd/MM/yyyy HH:mm:ss}" />
                        </StackPanel>

                        <StackPanel Margin="0,10,0,0"
                                    x:Name="_Finishday"
                                    IsEnabled="False">
                            <TextBlock Text="Ngày hoàn thành:" />
                            <TextBlock x:Name="FinishDate"
                            HorizontalAlignment="Left"
                            Text="{Binding SelectedItem.FinishDate,StringFormat=dd/MM/yyyy HH:mm:ss}" />
                        </StackPanel>

                        <StackPanel Margin="0,10,0,0"
                                    x:Name="_cost"
                                    IsEnabled="False">
                            <TextBlock Text="Chi phí:" />
                            <TextBlock x:Name="RepairCost"
                                HorizontalAlignment="Left"
                                       Text="{Binding SelectedItem.RepairCostStr}" />
                        </StackPanel>
                    </StackPanel>
                </Grid>
            </Grid>
        </Grid>
    </Border>
</Window>
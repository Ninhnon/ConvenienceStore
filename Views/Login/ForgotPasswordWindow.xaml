<Window x:Class="ConvenienceStore.Views.Login.ForgotPasswordWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ConvenienceStore.Views.Login"
        mc:Ignorable="d"
        x:Name="wdForgot"
        DataContext="{StaticResource ForgotVM}"
        Title="ForgotPasswordWindow" Height="450" Width="800">
    <Border>
        <Grid>
            <StackPanel HorizontalAlignment="Center"
                     VerticalAlignment="Center">
                <TextBox Background="CadetBlue"
                     x:Name="textEmail"
                     Width="100"
                     Height="50">


                </TextBox>
                <Button Background="Aqua" Content="Click"
                        Command="{Binding ForgotPasswordCommand}"
                        CommandParameter="{Binding ElementName=wdForgot}"
                        >
                    
                </Button>
            </StackPanel>
            
        </Grid>
    </Border>
   
</Window>
